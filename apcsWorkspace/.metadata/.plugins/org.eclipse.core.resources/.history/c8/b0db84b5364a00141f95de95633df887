
public class excercise7_5 {

	public static void main(String[] args) {
		
		int x = 3;
		int i = x;
		
		while(i > 0){
			myexp(x,i);
			i--;
		}
		
	}

	
	public static int myexp(int x, int y){
		int exp;
		while(y>0){
			x= x*x;
		}
		return x;
	}
	
	
  	public static int fact(int n){
		int result;
		if (n == 0){
			result = 1;
			return result;
		}else{
			result = n*fact(n-1);
		}
		return result;
	}
	
}
