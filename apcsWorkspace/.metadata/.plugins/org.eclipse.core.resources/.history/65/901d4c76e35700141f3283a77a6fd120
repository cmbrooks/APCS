public class my_sqrt {

	public static void main(String[] args) {
		
		System.out.println(squareRoot(-4));

	}
	
	public static double squareRoot(double d){

		if(d>0){
			double x0 = d/2;
			System.out.println("First approximation: " + x0);
			double lastApprox = x0;
			double approx = 0;
			for(int i = 0; i < 5; i++){
				approx = ((lastApprox+(d/lastApprox))/2);
				System.out.println(approx);
				lastApprox = approx;
			}
			System.out.println(approx);
			return approx;
		}else{
			double newd = Math.abs(d);
			double x0 = newd/2;
			System.out.println("First approximation: " + x0);
			double lastApprox = x0;
			double approx = 0;
			System.out.print("Imaginary Number: ");
			for(int i = 0; i < 5; i++){
				approx = ((lastApprox+(d/lastApprox))/2);
				System.out.println(approx);
				lastApprox = approx;
			}
			System.out.println(approx+"i");
			return approx;
		}

	}

}
