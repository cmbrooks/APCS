
public class excercise7_5 {

	public static void main(String[] args) {
		
		int x = 3;
		int i = 1;
		double e = 1.0;
		
		myexp2(x,i,e);
		System.out.println("");
		check(x,i,e);
		
	}

	
	public static double myexp(double x, int i, double e){ //Tested
		while(i <= x){
//			System.out.print("i: " + i + "\t" + "old e: " + e);
			e = e + (Math.pow(x,i)/fact(i));
//			System.out.println("\t" + "new e: " + e);
			i++;
		}
		System.out.println("e^" + x + " is: " + e);
		return e;
	}


	public static double myexp2(double x, int i, double e){ //Tested
		double xdivi;
		while(i <= x){
			xdivi = x/i;
//			System.out.print("i: " + i + "\t" + "old e: " + e + "\t" + "x: " + x + "\t" + "x/i: " + xdivi);
			e = e + (e*xdivi);
//			System.out.println("\t" + "new e: " + e);
			i++;
		}
		System.out.println("e^" + x + " is: " + e);
		return e;
	}	
	
	
	public static void check(double x, int i, double e){
		System.out.println("The real value of e^" + x + " is: " + Math.exp(x));
		if(Math.exp(x) == myexp(x,i,e)){
			System.out.println("You are a great programmer!");
		}else{
			System.out.println("You done goofed! (Probably because of the incorrect math)");
		}
	}
	
	
  	public static double fact(int n){ //Tested
		double result;
		if (n == 0){
			result = 1;
			return result;
		}else{
			result = n*fact(n-1);
		}
		return result;
	}
	
}