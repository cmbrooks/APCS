
public class sieve_of_eratosthenes {

	public static void main(String[] args) {

		int largestNumber = 100;
		int arraySize = largestNumber - 1;
		boolean[] numberStatus = new boolean[arraySize];
		int p = 2;

		
		//Fill array with numbers from 0 to the array size
		for(int i = 0; i <= numberStatus.length -1; i++){
			numberStatus[i] = true;
		}
		
		//Remove non-prime numbers
		for(int i = 2*p; i <= arraySize+1; i = p+i){
			System.out.println("Remove: " + i);
			numberStatus[i-1] = false;
		}
		
		//Print all elements in array
		System.out.println("");
		System.out.println("Final Array:");
		for(int i = 0; i <= numberStatus.length - 1; i++){
			System.out.println(numberStatus[i]);
		}
		
	}

}
