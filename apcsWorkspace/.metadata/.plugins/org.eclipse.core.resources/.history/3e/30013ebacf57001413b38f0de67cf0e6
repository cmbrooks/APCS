
public class sieve_of_eratosthenes {

	public static void main(String[] args) {

		int largestNumber = 100;
		int arraySize = largestNumber - 1;
		boolean[] numberStatus = new boolean[arraySize];
		int p = 2;

		
		//Initialize array as all numbers are prime (true)
		for(int i = 0; i <= numberStatus.length; i++){
			numberStatus[i] = true;
		}
		
		//Mark non-prime numbers as false
		for(int i = 2*p; i <= numberStatus.length; i = p+i){
			System.out.println("Remove: " + i);
			numberStatus[i-2] = false;
		}
		
		//Print all elements in array
		System.out.println("");
		System.out.println("Final Array:");
		for(int i = 0; i <= numberStatus.length; i++){
			System.out.println(i + ": " + numberStatus[i]);
		}
		
	}

}
